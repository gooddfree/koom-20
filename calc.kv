<CalcLayout>:
    orientation: "vertical"
    spacing: 8
    padding: 8

    TextInput:
        id: display
        text: ""
        font_size: 40
        size_hint_y: 0.25
        multiline: False
        halign: "right"
        valign: "middle"
        readonly: False

    GridLayout:
        cols: 4
        spacing: 6
        row_default_height: (self.height - self.rows*6) / (self.rows if self.rows else 1)
        rows: 5

        Button:
            text: "7"; on_release: root.press(self.text)
        Button:
            text: "8"; on_release: root.press(self.text)
        Button:
            text: "9"; on_release: root.press(self.text)
        Button:
            text: "/"; on_release: root.press(self.text)

        Button:
            text: "4"; on_release: root.press(self.text)
        Button:
            text: "5"; on_release: root.press(self.text)
        Button:
            text: "6"; on_release: root.press(self.text)
        Button:
            text: "*"; on_release: root.press(self.text)

        Button:
            text: "1"; on_release: root.press(self.text)
        Button:
            text: "2"; on_release: root.press(self.text)
        Button:
            text: "3"; on_release: root.press(self.text)
        Button:
            text: "-"; on_release: root.press(self.text)

        Button:
            text: "0"; on_release: root.press(self.text)
        Button:
            text: "."; on_release: root.press(self.text)
        Button:
            text: "="; on_release: root.press(self.text)
        Button:
            text: "+"; on_release: root.press(self.text)

        Button:
            text: "C"; size_hint_y: None; height: "48dp"; on_release: root.press(self.text)
        Label:
            text: ""; size_hint_y: None; height: "48dp"
        Label:
            text: ""; size_hint_y: None; height: "48dp"
        Label:
            text: ""; size_hint_y: None; height: "48dp"
